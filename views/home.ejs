<!DOCTYPE html>
<html lang="en">

<% if(isLogined){ %>

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="./stylesheets/style.css" />

    <title>Expense Tracker</title>
</head>

<body>
    <h2>Expense Tracker</h2>

    <div class="container">
        <h2>Hi <%= user %></h2>
        <h4>Your Balance</h4>
        <h1 id="balance">$0.00</h1>
        <button onclick="location.href='/logout'" class="btn btn-danger">Logout</button>

        <div class="inc-exp-container">
            <div>
                <h4>Charles</h4>
                <p id="money-plus" class="money plus">NTD <%= sum %></p>
            </div>
            <div>
                <h4>Chris</h4>
                <p id="money-minus" class="money minus">NTD <%= owe %></p>
            </div>
        </div>

        <div class="nav-container topBotomBordersOut">
            <ul class="list-group-horizontal">
                <% Object.keys(result).forEach(function(key) { %>
                <li class="list-group-item"><a onclick="openTab(event, '<%= key %>')"><%= key %></a></li>
                <% }) %>
            </ul>
        </div>

        <h3>History</h3>

        <% for (var key in result) { %>
        <div id="<%= key %>" class="tab-content">
            <ul id="list" class="list">
                <% var obj = result[key]; %>
                <% for (var prop in obj) { %>
                <li class="<%= obj[prop].pay %>">
                    <span><%= obj[prop].date %></span>
                    <%= obj[prop].item %>
                    <span>$<%= obj[prop].price %></span>
                    <button id="<%= obj[prop].id %>" class="delete-btn" onclick="return deleteRecoed(this)">x</button>
                </li>
                <% } %>
            </ul>
        </div>
        <% } %>

        <% if(user == "帥哥"){ %>
        <h3>Add new transaction</h3>
        <form id="tracking-form">
            <label class="checkbox-inline"><input name="type" type="radio" value="-" checked>Pay</label>
            <label class="checkbox-inline"><input name="type" type="radio" value="+">Receive</label>
            <hr>
            <label class="checkbox-inline"><input name="user" type="radio" value="Charles" checked>Charles</label>
            <label class="checkbox-inline"><input name="user" type="radio" value="Chris">Chris</label>
            <div class="form-control">
                <label for="text">Text</label>
                <input type="text" id="text" placeholder="Enter text..." />
            </div>
            <div class="form-control">
                <label for="amount">Amount </label>
                <input type="number" id="amount" placeholder="Enter amount..." />
            </div>

        </form>
        <button class="btn" id="btn-save">Add transaction</button>
        <%}%>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <script src="../vendor/jquery/jquery-3.2.1.min.js" type="text/javascript"></script>

    <!-- <script src="../vendor/bootstrap/js/popper.js" type="text/javascript"></script> -->
    <script src="../vendor/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="../vendor/select2/select2.min.js" type="text/javascript"></script>

    <script src="./javascripts/script.js"></script>

    <script async="" src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13" type="text/javascript"></script>
    <script type="text/javascript">
        window.dataLayer = window.dataLayer || [];
        function gtag() {dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>
</body>

<% } else {%>

        <head>
            <title>Login</title>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">

            <link rel="icon" type="image/png" href="./login/images/icons/favicon.ico" />

            <link rel="stylesheet" type="text/css" href="./login/vendor/bootstrap/css/bootstrap.min.css">

            <link rel="stylesheet" type="text/css" href="./login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

            <link rel="stylesheet" type="text/css" href="./login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">

            <link rel="stylesheet" type="text/css" href="./login/vendor/animate/animate.css">

            <link rel="stylesheet" type="text/css" href="./login/vendor/css-hamburgers/hamburgers.min.css">

            <link rel="stylesheet" type="text/css" href="./login/vendor/animsition/css/animsition.min.css">

            <link rel="stylesheet" type="text/css" href="./login/vendor/select2/select2.min.css">

            <link rel="stylesheet" type="text/css" href="./login/vendor/daterangepicker/daterangepicker.css">

            <link rel="stylesheet" type="text/css" href="./login/css/util.css">
            <link rel="stylesheet" type="text/css" href="./login/css/main.css">

            <script src="https://cdn.firebase.com/libs/firebaseui/3.5.2/firebaseui.js"></script>
            <link type="text/css" rel="stylesheet"
